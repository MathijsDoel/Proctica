<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Proctos Academy</title>
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Libre+Franklin:wght@100&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/stylequiz.css">
    <link rel="icon" type="image/png" href="https://proctoskliniek.nl/wp-content/themes/understrap-child/inc/media/logo_sticky2.png "/>
</head>
<body>
    <div id="box">
        <h1><%=main_question%></h1>
            <form action="?"  method="post">
                <% let abcde = ['a', 'b', 'c', 'd', 'e']; %>
                <% for (var i =0; i < answers.length;  i++ ) { %>
                    <div class="antwoord" id=<%=abcde[i]%>>
                        <button type="submit" name="value" value=<%=i%>><%=abcde[i]%>: <%=answers[i]%></button>
                    </div>
                <% } %>
                <style>
                    #box #<%=abcde[given]%>{
                        background-color: #897EFF;
                    }
                </style>
            </form> 
        <div id="bottom-button">
            <a class="skip-button" id="previous" href=<%=previous%>>Vorige</a>
            <div id="vl"></div>
            <a class="skip-button" id="next" href= <%=next%>>Volgende</a>
        </div>
    </div>
    <script>
        let next_button = document.getElementById("next");
        let previous_button = document.getElementById("previous");
        let index = <%=next%> - 1;
        if(index >= <%=total_questions%>-1){
            next_button.innerHTML = "Naar overzicht";
            next_button.href = "/overview/" + <%=course%>;
        }
        if(index <= 0){
            previous_button.innerHTML = "Naar filmpje";
            previous_button.href = "/movie/" + <%=course%>;
        }
    </script>
</body>
</html>